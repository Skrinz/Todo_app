<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todo_client.Tasks"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#101825">
    <ContentPage.Content>
        <VerticalStackLayout
            Margin="0"
            Spacing="0">
            
            <!-- Header Bar -->
            <Grid BackgroundColor="#a4a757" HeightRequest="50" VerticalOptions="Start">
                <Label Text="Tasks"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"/>
            </Grid>
            
            <!-- Content -->
            <ScrollView>
                <VerticalStackLayout>
                    <Label Text="Tasks"></Label>
                </VerticalStackLayout>
            </ScrollView>
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>