<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todo_client.Profile"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#101825">
    <ContentPage.Content>
        <Grid BackgroundColor="#101825" RowDefinitions="Auto,*">
            
            <!-- Header Bar -->
            <Grid BackgroundColor="#a4a757" HeightRequest="50" Grid.Row="0">
                <Label Text="Profile"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="White"
                       FontSize="20"
                       FontAttributes="Bold"/>
            </Grid>
            
            <!-- Content -->
            <Grid Grid.Row="1" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
                <VerticalStackLayout HorizontalOptions="Center">
                    
                    <!-- Profile Picture -->
                    <Border 
                        Stroke="Transparent"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="300"
                        HeightRequest="300">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20"/>
                        </Border.StrokeShape>
                        <Image 
                            Source="profilepic.jpg"
                            Aspect="AspectFill"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                    </Border>
                    
                    <!-- Sign Out Button -->
                    <Border 
                        Margin="30,-20"
                        Stroke="Transparent"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="300">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="6"/>
                        </Border.StrokeShape>
                        <Button 
                            Text="Sign Out"
                            TextColor="White"
                            FontAttributes="Bold"
                            BackgroundColor="#fe706d"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="FillAndExpand"
                            Clicked="SignOut_OnClicked"/>
                    </Border>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>